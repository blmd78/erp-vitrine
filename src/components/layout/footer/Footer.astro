---
import { cn } from '@/lib/core/utils'

// Use new i18n system from middleware
const { t } = Astro.locals
---

<footer class={cn('px-8 py-3 border-t border-gray-200 ', 'md:px-12')}>
	<div class="mx-auto max-w-5xl">
		<div
			class="flex flex-col items-center justify-between gap-4 text-xs md:flex-row"
		>
			<div class="text-gray-600">
				{t('footer.copyright', { year: new Date().getFullYear() })}
			</div>
			<div class="flex gap-6">
				<a href="/privacy" class="text-gray-600 hover:text-gray-900"
					>{t('footer.privacy')}</a
				>
				<a href="/terms" class="text-gray-600 hover:text-gray-900"
					>{t('footer.terms')}</a
				>
			</div>
		</div>
	</div>
</footer>
