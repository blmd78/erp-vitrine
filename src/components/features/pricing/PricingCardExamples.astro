---
import { cva } from 'class-variance-authority'
import { cn } from '@/lib/core/utils'
import type { Plan } from '@/types/plans'

export interface Props {
	plan: Plan
	title: string
	examples: readonly string[]
}

const { plan, title, examples } = Astro.props

const exampleBulletVariants = cva(
	['mt-1.5 h-2 w-2 flex-shrink-0 rounded-full', 'bg-gradient-to-r'],
	{
		variants: {
			plan: {
				starter: 'from-brand-blue to-brand-blue-dark',
				business: 'from-brand-green to-brand-green-dark',
				enterprise: 'from-brand-blue-dark to-brand-green-dark',
			},
		},
	},
)
---

<div class="mb-6 sm:mb-8">
	<h4 class="mb-2 text-xs font-semibold text-gray-900 sm:mb-3 sm:text-sm">
		{title}
	</h4>
	<ul class="space-y-2 sm:space-y-2.5">
		{
			examples.map(example => (
				<li class="flex items-start gap-3">
					<div class={cn(exampleBulletVariants({ plan }))} />
					<span class="text-sm leading-relaxed text-gray-600">
						{example}
					</span>
				</li>
			))
		}
	</ul>
</div>
